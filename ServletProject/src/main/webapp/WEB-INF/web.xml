<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
 <servlet>  
<servlet-name>createemployeeservlet</servlet-name>  
<servlet-class>com.servlet.controller.CreateEmployeeServlet</servlet-class>  
</servlet> 
<servlet>  
<servlet-name>updateteemployeeservlet</servlet-name>  
<servlet-class>com.servlet.controller.UpdateEmployeeServlet</servlet-class>  
</servlet>  
  <servlet>  
<servlet-name>deleteteemployeeservlet</servlet-name>  
<servlet-class>com.servlet.controller.deleteteEmployeeServlet</servlet-class>  
</servlet> 
 <servlet>  
<servlet-name>getallemployeeservlet</servlet-name>  
<servlet-class>com.servlet.controller.getallEmployeeServlet</servlet-class>  
</servlet>  
  
<servlet-mapping>  
