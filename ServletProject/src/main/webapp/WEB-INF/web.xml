<url-pattern>/createemployee</url-pattern>  
</servlet-mapping>

<servlet-mapping>  
<servlet-name>updateemployeeservlet</servlet-name>  
<url-pattern>/updateemployee</url-pattern>  
</servlet-mapping>  
  <servlet-mapping>  
<servlet-name>deleteemployeeservlet</servlet-name>  
<url-pattern>/deleteemployee</url-pattern>  
</servlet-mapping>
 <servlet-mapping>  
<servlet-name>getallemployeeservlet</servlet-name>  
